<!-- Signup Form Overlay -->
<div class="overlay" id="loginOverlay">
  <div class="login-form">
    <h2>LogIn</h2>
    <!-- Include your actual signup form here -->
    <form method="post" action="/login">
      <label for="username">Username:</label>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="Username"
        required
      />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Password"
        required
      />

      <button type="submit">Log In</button>
    </form>
    <button class="closeBtn" onclick="closeLoginForm()">Close</button>

    <p class="signUpLink">
      Don't Have Account <a href="/signup">SignUP</a> Here
    </p>

    <p class="mt-2 signUpLink">
      <a href="/forgetPass"> Forget Password </a>???
    </p>
  </div>
</div>

