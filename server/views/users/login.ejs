<style>
  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Semi-transparent black overlay */
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .login-form {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    z-index: 1001; /* Place the form above the overlay */
    height: fit-content;
  }

  /* Style your form elements as needed */
  .login-form label {
    display: block;
    margin-bottom: 8px;
  }

  .login-form input {
    width: 100%;
    padding: 8px;
    margin-bottom: 12px;
    border-radius: 1rem;
  }

  .login-form button {
    background-color: #fefefe;
    color: rgb(0, 0, 0);
    border: 2px solid black !important;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    border-radius: 1rem;
  }
  .login-form button:hover {
    background-color: #1876f2;
    color: white;
  }
  .closeBtn {
    position: relative;
    left: 14.2rem;
    bottom: 2.75rem;
  }
  .signUpLink {
    position: relative;
    bottom: 2rem;
  }
</style>

